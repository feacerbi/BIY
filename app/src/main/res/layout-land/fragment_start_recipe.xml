<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="br.com.felipeacerbi.biy.fragments.StepFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_layout_no_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_default">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_step_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/background_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tv_step_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:minWidth="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="3"/>

            <TextView
                android:id="@+id/tv_step_short_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                tools:text="Combine dry ingredients."/>
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_step_photo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/recipe_step_image_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_step_title"
            android:visibility="gone"
            tools:src="@drawable/recipe_placeholder"/>

        <TextView
            android:id="@+id/tv_directions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="@string/directions_title_text"
            app:layout_constraintTop_toBottomOf="@id/cl_step_title"
            app:layout_goneMarginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_directions_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_step_photo"
            app:layout_constraintHorizontal_bias="0">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <TextView
                    android:id="@+id/tv_step_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="88dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:text="@string/dot_divider"
                    android:alpha="0.7"
                    tools:text="Combine the cake flour, 400 grams (2 cups) of sugar, baking powder, and 1 teaspoon of salt in the bowl of a stand mixer. Using the paddle attachment, beat at low speed until the dry ingredients are mixed together, about one minute."/>
            </FrameLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/sepv_step_video_player"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        app:show_timeout="2000"
        app:rewind_increment="5000"
        app:controller_layout_id="@layout/custom_playback_control"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
