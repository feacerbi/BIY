<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    tools:context="br.com.felipeacerbi.biy.fragments.StepFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_media_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/iv_step_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/recipe_step_image_description"
                android:visibility="gone"
                tools:src="@drawable/recipe_placeholder"/>

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/sepv_step_video_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:layout_gravity="center_horizontal"
                app:show_timeout="2000"
                app:rewind_increment="5000"
                app:controller_layout_id="@layout/custom_playback_control"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_directions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="@string/directions_title_text"
            app:layout_constraintTop_toBottomOf="@id/fl_media_container"
            app:layout_constraintStart_toStartOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_directions_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0">
            <TextView
                android:id="@+id/tv_step_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="104dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:alpha="0.7"
                tools:text="Combine the cake flour, 400 grams (2 cups) of sugar, baking powder, and 1 teaspoon of salt in the bowl of a stand mixer. Using the paddle attachment, beat at low speed until the dry ingredients are mixed together, about one minute."/>
        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
